{% extends 'global/layout_view.html.twig' %}

{% set titlePage = "page.informes.title.articulosShow" | trans %}
{% set menu = "informes" %}

{% block buttonsTitle %}
{% set referer = (app.request.server.get('HTTP_REFERER') is not null ?
            app.request.server.get('HTTP_REFERER')|default('/') :
            path('informes_articulos', {'desde' : desde, 'hasta' : hasta})) %}
<li>
    {{ macro_buttonReturn(referer) }}
</li>
{% endblock %}

{% block viewContent %}
<div class="znv-card-full znv-highlight">
    <div class="znv-form-group-view">
        <h3>{{ ventas[0].idArt.descripcion }}</h3> 
    </div>
</div> 

<div class="znv-card-full">           
                <div class="znv-list-container">
                    <div class="znv-header">
                        <div class="znv-col "> {{ 'Cant' }}
                        </div>
                        <div class="znv-col "> {{ 'Cliente' }}
                        </div>
                        <div class="znv-col "> {{ 'Fecha' }}
                        </div>            
                    </div>
            {% for articulo in ventas %} 
                    <div class="znv-line">
                        <div class="znv-col">
                            <div class="znv-header">{{ 'Cant' }}</div>                                                 
                                {{ articulo.cant }}                                            
                        </div>

                        <div class="znv-col">
                            <div class="znv-header">{{ 'Articulo' }}</div>                                                                                                                      
                                {{ articulo.idVentas.idCliente.nombre }}                                
                        </div>

                        <div class="znv-col">
                            <div class="znv-header">{{ 'Precio' }}</div>                                                                              
                                {{ articulo.idVentas.fecha| date('d-m-Y') }}                                
                        </div>                                   
                    </div>                                                                                                                                                          
            {% endfor %}                          
                </div>
            </div>   

{% endblock %}